---
import CostStructure from "../components/React/CostStructure/CostStructure";
import Create from "../components/React/CostStructure/UI/Create";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Estructura de Costos">
  <div
    class="flex justify-between items-center p-3 bg-gray-900 border-b shadow-sm text-xl font-semibold border-gray-800 sticky top-0 left-0"
  >
    <h1 class="text-[18px] font-light flex items-center gap-2">
      <Icon name="clipboard" />
      Estructura de Costos
    </h1>

    <Create client:load />
  </div>
  <div class="p-6">
    <CostStructure client:load />
  </div>
</Layout>
